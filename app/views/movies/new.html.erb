<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="card p-3">
        <h3>Create a new movie</h3>
        <%= simple_form_for @movie do |f| %>
          <%= f.input :title %>
          <%= f.input :overview %>
          <%= f.input :poster_url %>
          <%= f.input :rating %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>