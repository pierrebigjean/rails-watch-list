<div class="cover cover-index">
  <div class="container">
    <h1>Raileemovies</h1>
    <p class="subtitle">Save your movies</p>
  </div>
</div>
<div class="container my-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4">
        <%= link_to list_path(list) do %>
          <% if list.photo.attached? %>
            <div class="card card-index card-link mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
          <% else %>
            <div class="card card-index card-link mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema.jpg') %>)">
          <% end %>
              <%= list.name %>  
            </div>
        <% end %>
        <%= link_to "+", list_path(list), method: :delete, data: { confirm: 'Remove this list ?' }, class: "card-remove-link remove-index" %>
      </div>
    <% end %>
  </div>
</div>