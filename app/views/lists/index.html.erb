<div class="cover cover-index">
  <div class="container">
    <h1>Raileemovies</h1>
    <p>Save your movies</p>
  </div>
</div>
<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card card-index mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema.jpg') %>)">
            <%= list.name %>
            <%= link_to "+", list_path(list), method: :delete, data: { confirm: 'Remove this list ?' }, class: "card-remove-link" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>