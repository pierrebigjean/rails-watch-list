<div class="cover cover-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema.jpg') %>)">
  <div>
    <h1><%= @list.name %></h1>
    <p><%= @list.movies.size %> movies</p>
  </div>
</div>
<div class="container mb-5">
  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat my-4' %>
  <div class="row">
    <% if @list.movies.empty? %>
      <small><em class="text-muted px-3">You have no movies in your list</em></small>
    <% end %>
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4">
        <div class="card">
          <%= image_tag movie.poster_url %>
          <div class="container mb-2">
            <div class="card-rating mt-2">
              <h5>
                <%= movie.title %>
              </h5>
              <div>
                <%= movie.rating %>
                <i class="fas fa-star star-yellow"></i>
              </div>
            </div>
            <p style="height: 50px;">
              <%= movie.overview %>
            </p>
            <div>
              <i class="fas fa-quote-left mr-2"></i>
              <%= bookmark.comment %>
              <%= link_to "+", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to remove this film ?' }, class: "card-remove-link" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6 mb-4">
      <h3>Reviews</h3>
      <% if @list.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review this list</em></small>
      <% end %>
      <% @list.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <p><%= review.text %></p>
        </div>
      <% end %>
    </div>
    <div class="col-12 col-sm-6 mb-4">
      <div class="pb-3 px-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :text, placeholder: 'Add your review' %>
          <%= f.input :rating, as: :select, collection: (1..5), prompt: "What's your rating" %>
          <%= f.submit class:'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>